

@{
    ViewData["Title"] = "CreateSpeciality";
}

<div class="create-university">
    <div class="container">
        <h1 style="text-align:center">Create Speciality </h1>
        <form name="my-form" autocomplete="off" action="/Administrator/CreateSpeciality" method="post">

            <div class="form-group" style="text-align:center">
                <label for="FacultyName">Faculty name</label>
                <select name="FucaltyName">
                    @foreach (var item in ViewBag.Faculties)
                    {
                        <option>
                            @item.Name
                        </option>
                    }
                </select>

            </div>

            <div class="form-group" style="text-align:center">
                <label for="SpecialityName">Name of speciality</label>
                <input type="text" class="form-control" name="SpecialityName" style="width: 420px;" placeholder="Type full name of speciality " required>
            </div>

            <div class="form-group" style="text-align:center">
                <label for="BudgetPlaceNumber">Badget place</label>
                <input type="number" class="form-control" name="BudgetPlaceNumber" style="width: 420px;" placeholder="Choose or type number of budget place" required>
            </div>
            <div class="form-group" style="text-align:center">
                <label for="PaidPlaceNumber">Paid place</label>
                <input type="number" class="form-control" name="PaidPlaceNumber" style="width: 420px;" placeholder="Choose or type number of paid place" required>
            </div>

            <div class="form-group" style="text-align:center">
                <label for="TestNeeded1">Name of first ZNO</label>
                <input type="text" class="form-control" name="TestNeeded1" style="width: 420px;" placeholder="Type full name of subject " required>
            </div>

            <div class="form-group" style="text-align:center">
                <label for="TestNeeded2">Name of second ZNO</label>
                <input type="text" class="form-control" name="TestNeeded2" style="width: 420px;" placeholder="Type full name of subject " required>
            </div>

            <div class="form-group" style="text-align:center">
                <label for="TestNeeded3">Name of third ZNO</label>
                <input type="text" class="form-control" name="TestNeeded3" style="width: 420px; " placeholder="Type full name of subject " required>
            </div>

            <button type="submit" class="btn btn-primary"> Submit</button>

        </form>
    </div>

</div>