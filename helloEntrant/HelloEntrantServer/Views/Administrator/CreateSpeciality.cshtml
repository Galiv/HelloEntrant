    <div class="create-university">
        <div class="container">
            <h1 style="text-align:center">Create Speciality </h1>
            <form name="my-form" autocomplete="off" action="/Administrator/CreateSpeiality" method="post">

                <div class="form-group" style="text-align:center">
                    <label for="FacultyName">Faculty name</label>
                    <select>
                        @foreach (var item in ViewBag.Faculties)
                        {
                            <option>
                                @item.Name
                            </option>
                        }
                    </select>

                </div>

                <div class="form-group" style="text-align:center">
                    <label for="SpecialityName">Name of speciality</label>
                    <input type="text" class="form-control" name="SpecialityName" style="width: 420px;" placeholder="Type full name of speciality " required>
                </div>

                <div class="form-group" style="text-align:center">
                    <label for="BudgetPlace">Badget place</label>
                    <input type="number" class="form-control" name="BudgetPlace" style="width: 420px;" placeholder="Choose or type number of budget place" required>
                </div>
                <div class="form-group" style="text-align:center">
                    <label for="PaidPlace">Paid place</label>
                    <input type="number" class="form-control" name="PaidPlace" style="width: 420px;" placeholder="Choose or type number of paid place" required>
                </div>

                <div class="form-group" style="text-align:center">
                    <label for="zno1">Name of first ZNO</label>
                    <input type="text" class="form-control" name="zno1" style="width: 420px;" placeholder="Type full name of subject " required>
                </div>

                <div class="form-group" style="text-align:center">
                    <label for="zno2">Name of second ZNO</label>
                    <input type="text" class="form-control" name="zno2" style="width: 420px;" placeholder="Type full name of subject " required>
                </div>

                <div class="form-group" style="text-align:center">
                    <label for="zno3">Name of third ZNO</label>
                    <input type="text" class="form-control" name="zno3" style="width: 420px; " placeholder="Type full name of subject " required>
                </div>

                <button type="submit" class="btn btn-primary"> Submit</button>

            </form>
        </div>

        </div>