@model List<Core.Entities.University>;
@{
    ViewData["Title"] = "Universities";
}

<table class="content-table table table-hover">
    <thead>
        <tr>
            <th scope="col" style="text-align:center">University</th>
            <th scope="col" style="text-align:center">Admin</th>
            <th scope="col" style="text-align:center"></th>
        </tr>
    </thead>
    @foreach (var university in Model)
    {
        <tr style="text-align:center">
            <td>
                <h3>
                    @university.Name
                </h3>
            </td>
            <td>
                <h3>
                    @university.User.Email
                </h3>
            </td>
            <td>
                <a class="btn btn-outline-primary waves-effect btn-sm" href="/SuperAdmin/RemoveUniversity?UniversityId=@university.UniversityId">
                    <i class="far mr-2" aria-hidden="true"></i>
                    Remove
                </a>
            </td>
        </tr>
    }
</table>
