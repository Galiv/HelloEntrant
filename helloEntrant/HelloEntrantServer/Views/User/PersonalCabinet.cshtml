@model Application.DTOs.User.UserProfile;
@{
    ViewData["Title"] = "PersonalCabinet";
}

<h1>PersonalCabinet</h1>

<form name="my-form" action="/User/UpdatePersonalInfo" method="post">
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Email" name="Email" value="@Model.Email" readonly required="" />
        </div>
    </div>
    <div class="form-group row">
        <label for="LastName" class="col-sm-2 col-form-label">Last name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Last name" name="LastName" value="@Model.LastName" required="" />
        </div>
    </div>
    <div class="form-group row">
        <label for="FirstName" class="col-sm-2 col-form-label">First name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="First name" name="FirstName" value="@Model.FirstName" required="" />
        </div>
    </div>

    <div class="form-group row">
        <label for="City" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="City" name="City" value="@Model.City" required="" />
        </div>
    </div>

    <div class="form-group row">
        <label for="DateOfBirth" class="col-sm-2 col-form-label">Date of birth</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" placeholder="Date of birth" name="DateOfBirth" value="@Model.DateOfBirth" />
        </div>
    </div>


    <div>
        <button type="submit" class="btn btn-default my-4 waves-effect z-depth-0">Update</button>
    </div>
</form>


